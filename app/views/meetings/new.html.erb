<h1>Create a meeting</h1>

<% if @meeting.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>
 
    <ul>
    <% @meeting.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_tag "/meetings", method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @meeting.name %>
  </div>
  <div>
    <%= label_tag :address %>
    <%= text_field_tag :address, @meeting.address %>
  </div>
  <div>
    <%= label_tag :start_time %>
    <%= datetime_local_field_tag :start_time, @meeting.start_time %>
  </div>
  <div>
    <%= label_tag :end_time %>
    <%= datetime_local_field_tag :end_time, @meeting.end_time %>
  </div>
  <div>
    <%= label_tag :notes %>
    <%= text_area_tag :notes, @meeting.notes %>
  </div>
  <div>
    <%= submit_tag %>
  </div>
<% end %>
